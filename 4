#include <stdio.h>
#include <math.h>

void main()
{
    float a = 3.2, z, y, Pi = 3.14, step = (-4.8-0.7)/7;
    
    // FOOOOOOOOOOR
    printf("\nfor loop \n");
    for(y = -4.8; y<=0.1; y=y-step){
        
        z = atan(pow(a+y, 3))/pow(log(a), 2) + Pi/6*a;
        printf("z = %f \t y = %f \n", z, y);
    }

    
    //WHIIIIIIIILE
    y = -4.8;
    printf("\nwhile loop \n");
    while(y<=0.1){
        
        z = atan(pow(a+y, 3))/pow(log(a), 2) + Pi/6*a;
        printf("z = %f \t y = %f \n", z, y);
        y=y-step;
        
    }
    
    
    //DOOOOO WHIIIIILE 
    y = -4.8;
    printf("\ndo...while loop \n");
    do{
       
        z = atan(pow(a+y, 3))/pow(log(a), 2) + Pi/6*a;
        printf("z = %f \t y = %f \n", z, y);
        y=y-step;
        
    }while(y<=0.1);
  
}
